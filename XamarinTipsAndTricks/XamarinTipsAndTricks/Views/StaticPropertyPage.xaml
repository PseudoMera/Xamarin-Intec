<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="XamarinTipsAndTricks.Views.StaticPropertyPage"
             xmlns:helper="clr-namespace:XamarinTipsAndTricks.Helpers"
             Title="Static Property Trick">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Next trick"
                     Command="{Binding ChangePageCommand}"/>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand"
                     HorizontalOptions="Center">
            <Label Text="{Binding Source={x:Static helper:Facts.Mood}}" 
                   FontSize="Title"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
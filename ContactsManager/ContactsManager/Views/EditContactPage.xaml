<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="ContactsManager.Views.EditContactPage">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Save"
                     Command="{Binding SaveProfile}"/>
    </ContentPage.ToolbarItems>
    
    <ContentPage.Content>
        <ScrollView>
        <StackLayout Padding="20">
            <Frame Style="{StaticResource FrameStyleAddEdit}">
                <Image Source="{Binding MyContact.Photo}"/>
            </Frame>

                <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand">
                    <Button Style="{StaticResource ButtonStyle}"
                            Padding="20"
                            Text="Take photo"
                            Command="{Binding TakePhoto}"/>

                    <Button Style="{StaticResource ButtonStyle}"
                            Padding="20"
                            Text="Pick photo"
                            Command="{Binding PickPhoto}"/>
                </StackLayout>
                <Entry Placeholder="First name"
                   Text="{Binding MyContact.FirstName}"/>
            <Entry Placeholder="Last name"
                   Text="{Binding MyContact.LastName}"/>
            <Entry Placeholder="Phone number"
                   Text="{Binding MyContact.PhoneNumber}"
                   Keyboard="Numeric"/>
            <Entry Placeholder="Email"
                   Text="{Binding MyContact.Email}"
                   Keyboard="Email"/>
            <Entry Placeholder="Adress"
                   Text="{Binding MyContact.Adress}"/>
            <Entry Placeholder="Relationship"
                   Text="{Binding MyContact.Relationship}"/>
            <Label Text="{Binding EditError}"
                   HorizontalOptions="Center"
                   TextColor="Red"/>
        </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>